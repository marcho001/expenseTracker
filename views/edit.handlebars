<div class="main-section d-flex justify-content-center m-5">
  <div class="main-body d-flex justify-content-center">
  <div class="form-body shadow mt-5 p-5 d-flex justify-content-center align-items-center" style=" width: 900px; ">
    <form action="/records/{{edit._id}}{{#if edit}}/edit{{/if}}{{#if create}}create{{/if}}" method="post" class="d-flex flex-column justify-content-around">
      <div class="amount d-flex justify-content-between mb-5">
        <span class="mr-3 text-danger">* 請輸入花費 :</span>
        <input type="text" name="amount" class="rounded"  style="width: 300px; height: 60px;  outline: none;" value="{{edit.amount}}">
      </div>
      <div class="expense-title d-flex justify-content-between mb-5">
        <span class="mr-3 text-danger">* 名稱 :</span>
        <input type="text" name="title" class="title rounded" value="{{edit.title}}"
          style="width: 300px; height: 60px;  outline: none;">
      </div>
      <div class="date d-flex justify-content-between mb-5">
        <span class="mr-3">日期 :</span>
        <input type="date" name="date" placeholder="2020-05-20" class="align-self-stretch" value="{{edit.date}}"
          style="width: 300px; height: 60px; outline: none;">
      </div>
      <div class="category d-flex justify-content-between mb-5">
        <span class="mr-3">類別 :</span>

        <select name="category" class="custom-select rounded" style="width: 300px; height: 60px;" placeholder="請選擇類別" value="{{edit.category}}">
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
      </div>
      <div class="account d-flex justify-content-between mb-5">
        <span class="mr-3">帳戶 :</span>
        <select name="account" class="custom-select rounded" style="width: 300px; height: 60px;" value="{{edit.account}}">
          <option value="現金">現金</option>
          <option value="第一銀行">第一銀行</option>
          <option value="第二銀行">第二銀行</option>
        </select>
      </div>
      <div class="amount d-flex justify-content-center mt-5">
        <button class="btn btn-warning">
          <h3 class="font-weight-bold">{{#if edit }}提交{{/if}}{{#if create }}新增支出{{/if}}</h3>
        </button>
      </div>

    </form>
  </div>
</div>
</div>

